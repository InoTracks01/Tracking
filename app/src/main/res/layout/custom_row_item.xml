<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"
    android:weightSum="100"
    android:elevation="20dp"
    android:background="@drawable/round"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/image_holder"
        android:elevation="13dp"
        >

        <ImageView
            android:id="@+id/imageViewThumbnail"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="20"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:background="@drawable/demo" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monica Singh"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mother" />
        </LinearLayout>

         <Button
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_weight="10"
             android:layout_marginTop="15dp"
             android:layout_marginRight="5dp"
             android:background="@drawable/ic_mode_edit_black_24dp"
             />


    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_weight="10"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_phone_black_24dp"/>

    <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="90">

          <TextView
              android:id="@+id/textViewTitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:layout_marginLeft="5dp"
              android:text="1828391038"
              android:textSize="15dp"
              android:textColor="#FF000000"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:text="Contact"
              android:textSize="13dp"
              />
      </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp">

     <ImageView
         android:layout_width="5dp"
         android:layout_height="30dp"
         android:layout_weight="10"
         android:layout_marginTop="8dp"
         android:background="@drawable/ic_email_black_24dp"/>

     <LinearLayout
         android:layout_width="1dp"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="90">

         <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ss@gmail.com"
        android:layout_marginLeft="5dp"
        android:textColor="#FF000000"
         android:textSize="15dp"/>

         <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginLeft="5dp"
         android:text="Mail"
         android:textSize="13dp"/>
     </LinearLayout>

</LinearLayout>


</LinearLayout>